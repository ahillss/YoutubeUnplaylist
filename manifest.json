{
  "manifest_version": 3,
  "version": "1.3",
  "name": "Youtube Unplaylist",
  "description": "Adds button to a Youtube video's playbar, that will remove it from all playlists",
  "host_permissions": [ "*://*.youtube.com/*" ],
  "content_scripts": [{
    "matches": [ "*://*.youtube.com/*" ],
    "run_at":"document_end",
    "js": [ "inject.js" ]
  }],
  "web_accessible_resources": [{
    "resources": [ "myscript.js" ],
    "matches": [ "<all_urls>" ]
  }]
}